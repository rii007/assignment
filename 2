#include <stdio.h>

int main()
{
    int n,i,j,k;
    printf("enter n:-");
    scanf("%d",&n);
    for(i=1;i<=2*n+1;i++){
        for(k=1; k<=2*n+1-i; k++)
        {
            printf(" ");
        }
        for(j=1;j<=2*n+1;j++){
            if(i==1||i==2*n+1||j==2*n+1||j==1){
                printf("*");
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}
